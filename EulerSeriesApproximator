package eulerseriesapproximator;

/**
 * This program calculates the value of Euler's series when given the number of terms and the exponent.
 * CSC Project 1350 # 3
 * @author TimothyRatliff
 * @since 10/08/15
 */


import java.util.Scanner;
public class EulerSeriesApproximator {

    public static void main(String[] args) {
        
        double numbert;
        double expo;
        double sumfinal;
        Scanner cort = new Scanner(System.in);
        System.out.print("Enter the number of terms to be used in approximating e^x -> ");
        numbert = cort.nextDouble();
        System.out.print("Enter the exponent x to approximate e^x -> ");
        expo = cort.nextDouble();
        System.out.println();
        
        
        if(numbert <= 0){
            System.out.printf("%.0f is an invalid number of terms.", numbert);
            return;
            }
        else if(numbert == 1){
            sumfinal = 1;
            
            } 
                        int count = 1;
                        double value = 0;
                        double numerator = 1;
                        double denominator = 1;
                        double sum = 0;
                        int i = 0;
                        for(i = 0; i < numbert; i += 1){
                                    while(count <= i){                                      //numerator calculation
                                        numerator *= expo;
                                        count += 1;
                                    }
                                        count = 1;
                                    while(count <= i){                                      //factorial calculation
                                        denominator *= count;
                                        count += 1;
                                    }
                                    if(i == 0){
                                    sum = 1;
                                        if(expo <= 0){
                                        System.out.printf("e^"+expo+" ~ %.5f", sum);
                                        }
                                        else if(expo > 0){
                                        System.out.printf("e ~ %.5f",sum);
                                        }
                                    continue;
                                    }
                                    value = numerator/denominator;
                                    System.out.printf("%+.5f", value);
                                    numerator = 1;
                                    denominator = 1;
                                    sum += value;
                                    count = 1;
        }
                System.out.printf(" = %.10f", sum);
        }
        }
    
    
